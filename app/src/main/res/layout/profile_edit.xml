<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white">


    <RelativeLayout
        android:fadingEdge="none"
        android:id="@+id/wlll"
        android:layout_height="?attr/actionBarSize"
        android:layout_width="fill_parent"
        android:background="@color/primary_dark">

        <TextView
            android:id="@+id/title_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kindly update you profile info below"
            android:ellipsize="marquee"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:paddingLeft="12dip"
            android:paddingTop="9dip"
            android:shadowColor="#000000"
            android:shadowRadius="1"
            android:shadowDy="-1"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"

            />

    </RelativeLayout>

    <ScrollView
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="4dip"
            >

            <TextView
                android:id="@+id/carrier"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="This profile will only be shared with your ICE List"
                android:textColor="#333"
                android:textStyle="bold"
                android:padding="7dip"
                android:shadowColor="#fff"
                android:shadowRadius="1"
                android:shadowDy="-1"
                />

            <TextView
                android:id="@+id/ks"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="\nWhat is you phone number?"
                android:textColor="#333"
                android:padding="3dip"
                android:shadowColor="#fff"
                android:shadowRadius="1"
                android:shadowDy="-1"
                />

            <EditText
                android:id="@+id/phone_profile"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="+2547XXXXXXXX"
                android:minLines="1"
                ></EditText>

            <TextView
                android:id="@+id/jkse"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="\nTell us a bit about your awesome self"
                android:textColor="#333"
                android:padding="3dip"
                android:shadowColor="#fff"
                android:shadowRadius="1"
                android:shadowDy="-1"
                />

            <EditText
                android:id="@+id/bio_profile"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="This will be helpful to match you with counsellor who isn't boring ;)"
                android:minLines="4"
                android:maxLength="1000"
                ></EditText>

            <TextView
                android:id="@+id/kks"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="\nWhere do you live?"
                android:textColor="#333"
                android:padding="3dip"
                android:shadowColor="#fff"
                android:shadowRadius="1"
                android:shadowDy="-1"
                />

            <EditText
                android:id="@+id/location_profile"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="e.g Mombasa, Kenya"
                android:minLines="1"
                ></EditText>

            <TextView
                android:id="@+id/num_des"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="\n\n"
                android:textColor="#333"
                android:padding="3dip"
                android:shadowColor="#fff"
                android:shadowRadius="1"
                android:shadowDy="-1"
                />

            <Button
                android:id="@+id/edit_btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Save Profile"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:padding="4dip"
                android:background="@color/accent"
                android:textColor="@color/white"
                ></Button>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="4dip"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_gravity="center"
                >

                <ProgressBar
                    android:id="@+id/progressbar"
                    android:padding="6dip"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:layout_gravity="center"
                    style="@android:style/Widget.ProgressBar.Small"
                    android:visibility="gone"
                    ></ProgressBar>
                <TextView
                    android:id="@+id/loadingtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dip"
                    android:text="posting.."
                    android:textColor="#000000"
                    android:padding="5dip"
                    android:gravity="center"
                    android:visibility="gone"

                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>